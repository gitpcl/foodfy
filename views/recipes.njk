{% extends "layout.njk" %}

{% block title %}
    <title>Receitas | Foodfy</title>
{% endblock%}

{% block links %}
    <link rel="stylesheet" href="./styles/main.css">
    <link rel="stylesheet" href="./styles/header.css">

    <link rel="stylesheet" href="./styles/page-recipes.css">
    <link rel="stylesheet" href="./styles/cards.css">
    <link rel="stylesheet" href="./styles/modal.css">
    
    <link rel="stylesheet" href="./styles/footer.css">
{% endblock %}

{% block content %}
    <main id="page-recipes">

        <section id="recipes">
            <div class="cards">
                {% for item in items %}
                <div class="card" id="{{ items.indexOf(item) }}">
                    <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
                    <h2>{{ item.title }}</h2>
                    <p>por {{ item.author }}</p>
                </div>
                {% endfor %}
            </div>
            
        </section>
    </main>
{% endblock %}

{% block modal %}
    <div class="modal-overlay">
        <div class="modal">
            <img src="" alt="Imagem da receita">
            <h2></h2>
            <p></p>

            <a href="#" class="close-modal">Fechar Modal</a>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="./scripts/script.js"></script>
{% endblock %}